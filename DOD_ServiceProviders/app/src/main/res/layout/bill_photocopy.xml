<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <ProgressBar
        android:id="@+id/pbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <EditText
        android:id="@+id/copy_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Total copying price"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/proEarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your charges : 0"
        android:textColor="#0E0E0E"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dodcharges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DoD charges : 0"
        android:textColor="#0E0E0E"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/total_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Bill : 0"
        android:textColor="#121111"
        android:textSize="18sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit Bill" />
</LinearLayout>